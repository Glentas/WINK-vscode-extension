{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2021",
		"lib": [
			"ES2021",
			"DOM"
		],
		"types": [
			"node"
		],
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "src",
		"esModuleInterop": true,
		"allowJs": true,
		"declaration": true,
		"declarationMap": true,
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}